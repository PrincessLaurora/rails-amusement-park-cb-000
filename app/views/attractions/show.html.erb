
<h1><%=@attraction.name%></h1>

<p><strong>Name:</strong> <%= @attraction.name %></p>
<p><strong>Total Numbers of Users: </strong> <%= @attraction.users.count %></p>
<p><strong>Ticket Requirement: </strong>  <%= @attraction.tickets %></p>
<p><strong>Height Requirement: </strong> <%= @attraction.min_height %> cm</p><br>
<p><strong>Nausea Rating: </strong>  <%= @attraction.nausea_rating %></p>
<p><strong>Happiness Rating: </strong>  <%= @attraction.happiness_rating %></p><br><br>

<%if @user.admin%>
<%= link_to 'Edit Attraction', edit_attraction_path %>
<%else%>
<%= button_to 'Go on this ride', rides_new_path %>
<%end%>
